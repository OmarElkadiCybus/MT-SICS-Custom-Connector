{
  "$id": "MtsicsEndpoint",
  "definitions": {
    "address": {
      "type": "object",
      "required": ["command"],
      "additionalProperties": true,
      "properties": {
        "command": {
          "$id": "/properties/command",
          "title": "command",
          "type": "string",
          "description": "The command to be sent to the scale",
          "enum": [
            "S",
            "SI",
            "TA",
            "PCS",
            "PW",
            "REF",
            "@",
            "TAC",
            "T",
            "Z",
            "D"
          ]
        },
        "mode": {
          "$id": "/properties/mode",
          "title": "Mode",
          "type": "string",
          "description": "Optional: Set the operational mode for this command",
          "enum": ["WEIGHING", "COUNTING"]
        },
        "timeout": {
          "type": "integer",
          "title": "Timeout (ms)",
          "description": "Optional: Timeout for the read/write response in milliseconds",
          "default": 5000
        }
      }
    }
  }
}
